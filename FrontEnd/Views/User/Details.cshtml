@model FrontEnd.Models.UserViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Dashboard.cshtml";

        
}

<h2 class="mb-4">Más Información Usuario</h2>

<hr />

<div class="form-row">
    <div class="form-group col-md-4">
        @Html.LabelFor(model => model.dni)
