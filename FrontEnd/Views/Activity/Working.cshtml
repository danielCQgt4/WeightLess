@model FrontEnd.Models.ActivitieAssistanceViewModel

@{
    ViewBag.Title = "ActiveActivity";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<link href="~/Public/css/Activity/ActiveAssistance.css" rel="stylesheet" />
<div class="p-1">
    <h3 class="mb-4">Actividad</h3>

    <!--MSG-->
    @if (ViewBag.status != null) {
        if (ViewBag.status) {
            <div class="alert alert-success" role="alert">
                @ViewBag.msg
            </div>
        }
        if (!ViewBag.status) {
            <div class="alert alert-danger" role="alert">
                @ViewBag.msg
            </div>
        }
    }

    @if (Model != null) {
        <div>
            <input type="hidden" value="@Model.idActivityAssistance" id="asjdlfkajsdflk" />
            <div>
                <h4>Informacion de la actividad</h4>
                <hr />
            </div>
            <div class="activity-info">
                <img src="@Model.activity.link" width="250" />
                <div class="pl-3">
                    <div><label><b>Nombre</b></label><p>@Model.activity.name</p></div>
                    <div><label><b>Met's</b></label><p>@Model.activity.met</p></div>
                </div>
            </div>
        </div>
        <div>
            <h4>Tiempo transcurrido</h4>
            <hr />
            <div>
                <div class="text-center">
                    <label id="time">@Model.timeOcurred</label>
                </div>
                <div class="time-actions">
                    <button id="btn-start" class="btn btn-success">Iniciar</button>
                    <button id="btn-pause" class="btn btn-primary">Continuar</button>
                    <button id="btn-stop" class="btn btn-danger">Detener</button>
                </div>
            </div>
        </div>
    }
</div>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
<script src="/signalr/hubs"></script>
<script src="~/Public/js/Activity/ActiveActivity.js"></script>