@model IEnumerable<FrontEnd.Models.AssistanceViewModel>
@{
    ViewBag.Title = "UserAssistance";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<link href="~/Public/css/Assistance/Assistance.css" rel="stylesheet" />
<div class="p-4">
    <h2 class="mb-4">Mi Asistencia</h2>
    <div class="">
        @foreach (var asis in Model) {
            <div class="accordion" id="accordionExample">
                <div class="card">
                    <div class="card-header header-card-assistance" id="headingTwo">
                        <h2 class="mb-0">
                            <button class="btn btn-block text-left collapsed header-card-assistance-btn" type="button" data-toggle="collapse" data-target="#fs_@asis.idAssistance" aria-expanded="false" aria-controls="collapseTwo">
                                Asistencia del @asis.datetime.ToString()
                            </button>
                        </h2>
                    </div>

                    <div id="fs_@asis.idAssistance" class="collapse" aria-labelledby="headingTwo">
                        <div class="card-body">
                            <div>
                                <div>
                                    <span>
                                        <b>
                                            Calorias Quemadas:
                                        </b>
                                    </span>
                                    <span>@asis.totalKcal</span>
                                </div>
                                <div>
                                    <span>
                                        <b>
                                            Tiempo Total:
                                        </b>
                                    </span>
                                    <span>@asis.totalTime</span>
                                </div>
                            </div>
                            <div></div>

                            <h3 class="mt-3">Actividades</h3>
                            <hr>
                            @if (asis.activitieAssistanceViewModel == null || asis.activitieAssistanceViewModel.Count() == 0) {
                                <div class="text-center">No se realizaron actividades</div>
                            }
                            @foreach (var aav in asis.activitieAssistanceViewModel) {
                                if (aav.end != null) {

                                    <div class="card">
                                        <div class="card-header header-card-activity" id="headingThree">
                                            <div>
                                                <button class="btn btn-block text-left collapsed header-card-assistance-btn" type="button" data-toggle="collapse" data-target="#snd_@aav.idActivityAssistance" aria-expanded="false" aria-controls="collapseThree">
                                                    @aav.activity.name
                                                </button>
                                            </div>
                                        </div>
                                        <div id="snd_@aav.idActivityAssistance" class="collapse" aria-labelledby="headingThree">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <img src="@aav.activity.link" alt="@aav.activity.name" width="136px" />
                                                    </div>
                                                    <div class="col">
                                                        <div>
                                                            <div>
                                                                <span>
                                                                    <b>
                                                                        Calorias Quemadas:
                                                                    </b>
                                                                </span>
                                                                <span>@aav.kcal</span>
                                                            </div>
                                                            <div>
                                                                <span>
                                                                    <b>
                                                                        Tiempo Total:
                                                                    </b>
                                                                </span>
                                                                <span>@aav.timeOcurred</span>
                                                            </div>
                                                            <div>
                                                                <span>
                                                                    <b>
                                                                        Inicio - Fin:
                                                                    </b>
                                                                </span>
                                                                <span>@aav.start.ToString().Substring(aav.start.ToString().IndexOf(' ')) - @aav.end.ToString().Substring(aav.end.ToString().IndexOf(' '))</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }


