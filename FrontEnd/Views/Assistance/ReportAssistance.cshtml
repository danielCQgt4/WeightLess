@using ReportViewerForMvc
@{
    ViewBag.Title = "ReportAssistance";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h2>Reporte de asistencia</h2>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="mt-3">
            <label for="date">Selecciona la fecha: </label>
            <div class="col col-md-4 p-0 m-0">
                <input type="date" id="date" name="date" required min="1970-01-01" class="form-control w-100">
            </div>
        </div>

        <div class="mt-4 d-flex align-items-center mt-3">
            <input type="submit" value="Generar Reporte" class="btn btn-info" />
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    </div>
}

<hr />

@if (ViewBag.ReportViewer != null) {
    <div class="mt-4 d-flex justify-content-center w-100">
        @Html.ReportViewer(
        ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer,
        new { scrolling = "yes" }
        )
    </div>
}

